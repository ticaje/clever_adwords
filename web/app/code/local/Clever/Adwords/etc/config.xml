<?xml version="1.0"?>
<config>
    <modules>
        <Clever_Adwords>
            <version>1.0.0</version>
        </Clever_Adwords>
    </modules>
    <global>
        <blocks>
            <clever_adwords>
                <class>Clever_Adwords_Block</class>
            </clever_adwords>
        </blocks>
        <helpers>
            <clever_adwords>
                <class>Clever_Adwords_Helper</class>
            </clever_adwords>
        </helpers>
        <models>
            <clever_adwords>
                <class>Clever_Adwords_Model</class>
            </clever_adwords>
            <clever_adwords_service>
                <class>Clever_Adwords_Service</class>
            </clever_adwords_service>
        </models>
        <resources>
            <clever_adwords_setup>
                <setup>
                    <module>Clever_Adwords</module>
                </setup>
            </clever_adwords_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <clever_adwords>
                <use>standard</use>
                <args>
                    <frontName>adwords</frontName>
                    <module>Clever_Adwords</module>
                </args>
            </clever_adwords>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adwords>
                <use>admin</use>
                <args>
                    <module>Clever_Adwords</module>
                    <frontName>adwords</frontName>
                </args>
            </adwords>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <adwords>
                    <file>clever_adwords/admin.xml</file>
                </adwords>
            </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <adwords>
                                            <title>Clever Adwords</title>
                                        </adwords>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
